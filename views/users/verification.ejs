<% include ../partials/header %>
<div class="container">
    <h1 style="text-align: center">Verify Your E-mail Adress</h1>
    <div style="margin:auto; width:30%">
        <form action="/register/<%= user._id %>/verification" method="POST">
            <div class="form-group">
                <input class="form-control" type="email" value="<%= user.email %>" readonly>
            </div>
            <div class="form-group">
                <input class="form-control" type="submit" value="Send OTP">
            </div>
        </form>
    </div>
</div>
<% include ../partials/footer %>